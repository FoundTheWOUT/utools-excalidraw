{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "dist/**/*",
    "public/**/*"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
